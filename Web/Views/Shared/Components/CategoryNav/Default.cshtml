@model System.Collections.Generic.IEnumerable<string>

@Html.ActionLink("Home", "List", "Products", null,
    new {@class = "btn btn-outline-dark btn-block btn-lg"})

@foreach (var link in Model)
{
    @Html.RouteLink(link, new
    {
        controller = "Products",
        action = "List",
        category = link,
        page = 1
    },
        new
        {
            @class = "btn btn-outline-dark btn-block btn-lg" +
                     (link == ViewBag.SelectedCategory ? " btn-primary" : "")
        })
}